<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_200"
    android:orientation="vertical"
    android:layout_gravity="center_vertical|center_horizontal"
    android:gravity="center_horizontal|center_vertical"
    tools:context=".autentication.Login">


    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:hint="@string/Login"
            android:textAlignment="center"
            android:textSize="32sp"
            android:textColorHint="@color/black"

            android:layout_height="wrap_content">

        </TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_margin="60dp"
            android:gravity="center_horizontal|center_vertical">

            <LinearLayout
                android:background="@drawable/campo_texto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_email"/>
                <EditText
                    android:inputType="textEmailAddress"
                    android:layout_width="match_parent"
                    android:textSize="20sp"
                    android:layout_height="wrap_content"
                    android:hint="@string/email"
                    />
            </LinearLayout>
            <LinearLayout
                android:background="@drawable/campo_texto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_password"/>
                <EditText
                    android:textSize="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:hint="@string/senha1"
                    />
            </LinearLayout>
            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/entrarbtn"
                    android:layout_width="wrap_content"
                    app:cornerRadius="50dp"
                    android:hint="@string/entrar"
                    android:layout_height="wrap_content">

                </com.google.android.material.button.MaterialButton>
            </LinearLayout>
            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="ou"
                    android:textColorHint="@color/black"
                    android:textSize="20sp"/>
            </LinearLayout>
            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/google"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/twitter"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/facebook"
                    android:layout_marginEnd="20dp"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_margin="20dp"
                android:id="@+id/forgot_pass"
                android:background="@drawable/campo_texto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView

                    android:id="@+id/clique_recover"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/forgot_pass"
                    android:textColorHint="@color/black"
                    android:textSize="19sp"/>
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
</LinearLayout>